<form method="post" style="background-color: #f7f8fa; padding: 30px; border-radius: 12px;">
    <div class="card shadow-sm border-0">
        <!-- Header -->
        <div class="card-header bg-primary text-white py-4 rounded-top" style="background: linear-gradient(135deg, #4facfe, #00f2fe);">
            <div class="row">
                <div class="col-12 text-center">
                    <h4 class="mb-0">Your Shopping Cart</h4>
                </div>
            </div>
        </div>

        <!-- Body -->
        <div class="card-body my-4" style="background-color: #fff;">
            <!-- Shopping Item -->
            <div class="row mb-3">
                <div class="col-md-2 text-center">
                    <img src="https://placehold.co/600x400" class="img-fluid rounded shadow-sm" alt="Product Image">
                </div>
                <div class="col-md-5">
                    <h5 class="text-secondary mb-1">Product Title</h5>
                    <p class="text-muted">This is the product description. It’s concise and gives necessary information about the product.</p>
                </div>
                <div class="col-md-3 text-center">
                    <h6 class="text-secondary mb-3">Price: $100</h6>
                    <div class="btn-group" role="group">
                        <button class="btn btn-outline-primary">+</button>
                        <input type="text" class="form-control text-center" value="1" style="width: 50px;" readonly>
                        <button class="btn btn-outline-primary">-</button>
                    </div>
                </div>
                <div class="col-md-2 text-center">
                    <button class="btn btn-danger rounded-circle" style="width: 40px; height: 40px;">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>

            <hr>

            <!-- Another Shopping Item (if needed) -->
            <!-- Benzer yapıda başka ürünler ekleyebilirsiniz -->
            <!-- Footer: Continue Shopping & Total -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <a href="#" class="btn btn-outline-secondary btn-lg w-100">Continue Shopping</a>
                </div>
                <div class="col-md-6 text-right">
                    <h5>Total: $100</h5>
                </div>
            </div>
        </div>

        <!-- Footer with Summary Button -->
        <div class="card-footer bg-white border-0 py-3">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <a href="#" class="btn btn-primary btn-lg w-100" style="background: linear-gradient(135deg, #36d1dc, #5b86e5);">Proceed to Checkout</a>
                </div>
            </div>
        </div>
    </div>
</form>
