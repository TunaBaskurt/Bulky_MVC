@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class=" text-bg-info ">Create Product</h2>
        </div>
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3" row p-1>
            <label asp-for="Title" class="p-0">Product Name</label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Description" class="p-0">Display Order</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row p-1>
            <label asp-for="ISBN" class="p-0">Product Name</label>
            <input asp-for="ISBN" type="text" class="form-control" />
            <span asp-validation-for="ISBN" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Author" class="p-0">Display Order</label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row p-1>
            <label asp-for="ListPrice" class="p-0">Product Name</label>
            <input asp-for="ListPrice" type="text" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Price" class="p-0">Display Order</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Price50" class="p-0">Display Order</label>
            <input asp-for="Price50" class="form-control" />
            <span asp-validation-for="Price50" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Price100" class="p-0">Display Order</label>
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Price100" class="text-bg-danger"></span>
        </div>


        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-dark form-control">Create</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark form-control">
                    Back To Lıst
                </a>
            </div>
          
        </div>
    </div>

</form>

@section Scripts{
    @{
       <partial name="_ValidationScriptsPartial"/>
    }
}
