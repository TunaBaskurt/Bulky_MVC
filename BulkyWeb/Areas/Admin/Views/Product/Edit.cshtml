@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 my-4">
        <div class="row pb-2">
            <h2 class=" text-bg-info ">Edit Product</h2>
        </div>
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3" row p-1>
            <label asp-for="Title" class="p-0">Title</label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Description" class="p-0">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row p-1>
            <label asp-for="ISBN" class="p-0">ISBN</label>
            <input asp-for="ISBN" type="text" class="form-control" />
            <span asp-validation-for="ISBN" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Author" class="p-0">Author </label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row p-1>
            <label asp-for="ListPrice" class="p-0">ListPrice</label>
            <input asp-for="ListPrice" type="text" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Price" class="p-0">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Price50" class="p-0">Price50</label>
            <input asp-for="Price50" class="form-control" />
            <span asp-validation-for="Price50" class="text-bg-danger"></span>
        </div>
        <div class="mb-3" row>
            <label asp-for="Price100" class="p-0">Price100</label>
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Price100" class="text-bg-danger"></span>
        </div>


        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-dark form-control">Update</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark form-control">
                    Back To Lıst
                </a>
            </div>

        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

