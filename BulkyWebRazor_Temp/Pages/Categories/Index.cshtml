@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel 
<div class="container">
      <div class="row pt-4 pb-2 ">

        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end ">

            <a asp-page="/Categories/Create"  class="btn btn-primary">
                Create New Category
             <i class="bi bi-cloud-plus-fill"></i>
            </a>

        </div>
      </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.CategoryList)
        {
            <tr>
            <td>@obj.Name</td>

            <td>@obj.DisplayOrder</td>
                   
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                                <i class="bi bi-pen">Edit</i>
                            </a>

                            <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3">Delete</i>
                            </a>
                        </div>

                    </td>
                    
            
        </tr>
        }
    </tbody>
</table>
</div>